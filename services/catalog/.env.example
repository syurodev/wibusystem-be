# Example configuration for the Catalog Service
# Copy to .env and adjust values for your environment.

CONFIG_ENVIRONMENT=development

CONFIG_SERVICE_HOST=0.0.0.0
CONFIG_SERVICE_PORT=4002
CONFIG_SERVICE_READ_TIMEOUT=30s
CONFIG_SERVICE_WRITE_TIMEOUT=30s
CONFIG_SERVICE_IDLE_TIMEOUT=120s
CONFIG_SERVICE_GRPC_PORT=40002

CONFIG_DB_HOST=localhost
CONFIG_DB_PORT=5433
CONFIG_DB_NAME=catalog_service
CONFIG_DB_USER=catalog_service
CONFIG_DB_PASSWORD=change-me
CONFIG_DB_SSL_MODE=disable
CONFIG_DB_MAX_CONNS=20
CONFIG_DB_MIN_CONNS=5
CONFIG_DB_MAX_CONN_LIFETIME=1h
CONFIG_DB_MAX_CONN_IDLE_TIME=30m
CONFIG_DB_MIGRATIONS_PATH=../../pkg/database/migrations/postgres/catalog

CONFIG_LOCALE_DEFAULT=en
CONFIG_LOCALE_SUPPORTED=en,vi
CONFIG_LOCALE_BUNDLE_PATH=../../pkg/i18n/locales
CONFIG_LOCALE_QUERY_PARAM=lang
CONFIG_LOCALE_HEADER=Accept-Language
CONFIG_LOCALE_COOKIE=locale

CONFIG_FEATURE_ANIME=true
CONFIG_FEATURE_MANGA=true
CONFIG_FEATURE_NOVEL=true

CONFIG_MEDIA_CDN_BASE_URL=
CONFIG_MEDIA_IMAGE_PROXY_URL=
CONFIG_MEDIA_SIGNED_URL_EXPIRY=15m

CONFIG_CORS_ALLOW_ORIGINS=*
CONFIG_CORS_ALLOW_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CONFIG_CORS_ALLOW_HEADERS=Authorization,Content-Type,Accept-Language
CONFIG_CORS_EXPOSE_HEADERS=Content-Length,Content-Type
CONFIG_CORS_ALLOW_CREDENTIALS=true
CONFIG_CORS_MAX_AGE=3600

CONFIG_IDENTIFY_GRPC_URL=localhost:9090
